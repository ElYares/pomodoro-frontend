---
import CoffeeCanvas from "../components/CoffeeCanvas.astro";
const USER_ID = "123";
---

<html>
  <head>
    <title>Pomodoro Pixel</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=VT323&display=swap" rel="stylesheet">
  </head>

  <body>
    <main class="dashboard-container">
      
      <section class="left-panel">
        <h1 class="app-title">Pomodoro Focus</h1>
        
        <div class="canvas-container">
          <CoffeeCanvas />
        </div>
      </section>

      <section class="right-panel">
        <div class="tasks-header">
          <h2>Mis Tareas</h2>
          <span id="task-counter" class="counter-badge">0</span>
        </div>
        
        <div id="tasks-root" data-user-id={USER_ID} class="tasks-scroll-area"></div>
      </section>

    </main>

    <script type="module" src="/scripts/tasks-client.js"></script>
    <script type="module" src="/scripts/coffee.js"></script>

    <script is:inline>
      // Funciones globales para los botones HTML
      window.pauseTask = () => alert("Función de pausa pendiente de conectar");
      window.completeTask = () => alert("Función de completar pendiente de conectar");
    </script>
  </body>
</html>