// src/components/CoffeeCanvas.astro
// Limpio: Sin títulos extra, sin scripts duplicados, solo la UI.
---

<div class="coffee-widget">
    <canvas id="coffeeCanvas" width="200" height="240"></canvas>

    <div id="timer" class="timer-display">00:00</div>

    <div class="coffee-controls">
        <button id="btn-pause" onclick="window.pauseTask()">Pausar</button>
        <button id="btn-resume" onclick="window.resumeTask()">Continuar</button>
        <button id="btn-complete" onclick="window.completeTask()">Completar</button>
    </div>
</div>

<style>
    .coffee-widget {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    /* Estilo específico para el canvas si hace falta */
    canvas {
        margin-bottom: 10px;
    }
</style>