<link rel="stylesheet" href="/styles.css">

<div class="container">
    <h1>Pomodoro Pixel Coffee</h1>
    <canvas id="coffeeCanvas" width="200" height="250"></canvas>

    <!-- Timer -->
     <div id="timer" class="timer">00:00</div>

     <div class="buttons">
        <button onclick="pauseTask()">Pausar</button>
        <button onclick="completeTask()">Completar</button>
    </div>
</div>

<script src="/scripts/coffee.js" defer></script>

<style>
.buttons {
    margin-top: 15px;
    display: flex;
    gap: 10px;
    justify-content: center;
}

button {
    background: #333;
    color: white;
    border: 1px solid #555;
    padding: 8px 14px;
    border-radius: 6px;
    cursor: pointer;
}

button:hover {
    background: #444;
}
</style>